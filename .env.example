# SECURITY
SECRET_KEY=
DEBUG=True
ALLOWED_HOSTS=127.0.0.1,localhost
CSRF_TRUSTED_ORIGINS=http://127.0.0.1,http://localhost

# Database (LOCAL - use Postgres on localhost instead of SQLite)
# Adjust user, password and DB name as per your local installation
DATABASE_URL=postgres://postgres:postgres@localhost:5432/estoque_db

